{
  "openapi": "3.0.0",
  "info": {
    "title": "Stock Info MCP Server",
    "version": "1.0.0",
    "description": "Exposes stock quote and history tools for use via MCP."
  },
  "paths": {
    "/get-stock-quote": {
      "get": {
        "operationId": "get-stock-quote",
        "summary": "Get stock quote for a symbol",
        "parameters": [
          {
            "name": "symbol",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The stock ticker symbol (e.g., AAPL)"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful stock quote",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "symbol": { "type": "string" },
                    "price": { "type": "number" },
                    "currency": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/get-reported-financials": {
      "get": {
        "operationId": "get-reported-financials",
        "summary": "Get reported financial data for a company",
        "parameters": [
          {
            "name": "symbol",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The stock ticker symbol (e.g., AAPL)"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful financial data response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "symbol": { "type": "string" },
                    "companyName": { "type": "string" },
                    "fiscalDate": { "type": "string" },
                    "reportDate": { "type": "string" },
                    "totalRevenue": { "type": "number" },
                    "netIncome": { "type": "number" },
                    "epsBasic": { "type": "number" },
                    "epsDiluted": { "type": "number" },
                    "grossProfit": { "type": "number" },
                    "operatingIncome": { "type": "number" },
                    "ebitda": { "type": "number" },
                    "cashAndCashEquivalents": { "type": "number" },
                    "totalAssets": { "type": "number" },
                    "totalLiabilities": { "type": "number" },
                    "shareholdersEquity": { "type": "number" },
                    "reportLink": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
